{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "HOST": "0.0.0.0",
    "PORT": "1337",
    "DATABASE_CLIENT": "postgres",
    "HOSTNAME_ENABLED": "false"
  },
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/admin/(.*)",
      "dest": "/admin/$1"
    },
    {
      "src": "/content-manager/(.*)",
      "dest": "/content-manager/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/uploads/$1"
    },
    {
      "src": "/i18n/(.*)",
      "dest": "/i18n/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 